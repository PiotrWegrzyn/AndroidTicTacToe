            android:onClick="end"
            android:text="Quit" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_above="@+id/button01"
            android:layout_alignStart="@+id/button01"
